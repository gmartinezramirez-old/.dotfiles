-- This is setup for dual 1920x1080 monitors, with the right monitor as primary
Config {
    font = "xft:Hack:size=8:bold:antialias=true"
    , bgColor = "#282c34"
    , fgColor = "#bbc2cf"
    , position = TopW L 100
    , lowerOnStart = True
    , commands = [
        Run Cpu ["-t","<fc=#a9a1e1><icon=/home/gonzalo/.xmonad/icons/cpu.xbm/></fc> <total>%","-L","3","-H","50","-l","#ebdbb2","-n","#ebdbb2","-h","#fb4934"] 50
        , Run Memory ["-t","<fc=#51afef><icon=/home/gonzalo/.xmonad/icons/mem.xbm/></fc> <usedratio>%","-H","80","-L","10","-l","#ebdbb2","-n","#ebdbb2","-h","#fb4934"] 50
        , Run Network "em1" ["-t","Net: <rx>, <tx>","-H","200","-L","10","-h","#FFB6B0","-l","#CEFFAC","-n","#FFFFCC"] 10
        , Run Date "%a %b %_d %k:%M" "date" 300
		-- Battery Monitor
		, Run BatteryP       [ "BAT0" ] 
    	[ "--template" , "<fc=#B1DE76><icon=/home/gonzalo/.xmonad/icons/battery.xbm/></fc> <acstatus>"
    	, "--Low"      , "10"        -- units: %
    	, "--High"     , "80"        -- units: %
    	, "--low"      , "#fb4934" -- #ff5555
    	, "--normal"   , "#bbc2cf"
    	, "--high"     , "#98be65"
    	, "--" -- battery specific options
           -- discharging status
           , "-o"   , "<left>% (<timeleft>)"
           -- AC "on" status
           , "-O"   , "<left>% (<fc=#98be65>Charging</fc>)" -- 50fa7b
           -- charged status
           , "-i"   , "<fc=#98be65>Charged</fc>"
    	] 50        
        , Run StdinReader
    ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = "%StdinReader% }{ %cpu% | %memory% | %battery% | %em1% | <fc=#ECBE7B>%date%</fc>" -- #69DFFA
}

