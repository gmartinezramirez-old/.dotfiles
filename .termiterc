# -----------------------------------------------------------------------------
# File path: ~/.config/termite/config
# Author: Gonzalo Martinez
# -----------------------------------------------------------------------------
[options]
    font = Operator Mono Medium 11
    #font = Hack Medium 10.5
    mouse_autohide = true
    
    # "system", "on" or "off"
    cursor_blink = system

    # "block", "underline" or "ibeam"
    cursor_shape = block
    
    clickeable_url = true

    urgent_on_bell = true
    resize_grip = false
    scroll_on_output = false
    scroll_on_keystroke = true    
    allow_bold = true
    dynamic_title = false
    scrollback_lines = 10000
    search_wrap = true

    browser = google-chrome

[colors]
    # Base 16 default
    # Special
    foreground      = #d0d0d0
    foreground_bold = #d0d0d0
    cursor          = #d0d0d0
    background      = #151515

    # Black
    color0  = #151515
    color8  = #505050

    # Red
    color1  = #ac4142
    color9  = #ac4142

    # Green
    color2  = #90a959
    color10 = #90a959

    # Yellow
    color3  = #f4bf75
    color11 = #f4bf75

    # Blue
    color4  = #6a9fb5
    color12 = #6a9fb5

    # Magenta
    color5  = #aa759f
    color13 = #aa759f

    # Cyan
    color6  = #75b5aa
    color14 = #75b5aa

    # White
    color7  = #d0d0d0
    color15 = #f5f5f5

